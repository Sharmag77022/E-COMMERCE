<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Categories</title>
        <link rel="icon"  type="image/png" href="/websiteLogo.png">
        <link rel="stylesheet" href="/css/bootstrap.css">
        <script src="/js/jquery-3.5.1.min.js"></script>
        <script src="/js/bootstrap.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <script src='/js/loadMenu.js'></script> 
         <link href="https://fonts.googleapis.com/css?family=Oswald" rel=“stylesheet”>
    
    </head>

    <body>
        <div id="includedContent"></div> <div class="row justify-content-center">
        <div class=" text-success col-sm-6 mx-auto bg-dark text-warning p-2 text-center" ><h4>Add a Category</h4> </div> </div> <br>
         <div class="row">    
        <form class="col-md-6 col-sm-12  mx-auto bg-info p-3 ">
            <div class="form-group ">
              <input type="text" class="form-control " id="newCat"  placeholder="Enter New Category"><br>
              <button type="submit" class="btn btn-primary " id="submitcat">Add Category</button>
            </div>
        </form></div> <br>
        
        <div class="row justify-content-center">
          <div class=" text-success col-sm-6 mx-auto bg-dark text-warning p-2 text-center" ><h4>Add a Sub Category</h4> </div> </div> <br>
           <div class="row">
            <form class="mx-4 p-3 bg-info col-md-6 col-sm-12  mx-auto">
              <select name="subCats" class="custom-select " id="selectCat">
                <option selected >Select Parent Category</option>
              </select><br>
              <input type="text" class="form-control col-sm-* my-3" id="newSubCat"  placeholder="Enter Sub Category">
              
              <button type="submit" class="btn btn-primary" id="submitsubcat">Add Category</button>
            
            </form></div>
          </div>
         </div>
            <!-- End -->
            <br>
            <div >
              <table class="table table-dark" id="allCats">
                <tr><td>Serial Number</td>
                    <td>Category Name</td>
                    <td>Enable/Disable</td>
                  </tr>
              </table></div>
            </div>
          <script src="/js/categories.js"></script>
       </body> 
 </html>